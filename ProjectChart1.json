
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/Ben25Walker/Ben25Walker.github.io/main/Projectchart1extension1.csv",
      "format": {"property": "csv"}
    },
    "title": {
      "text": "Poverty in different regions",
      "subtitle": "Source:World Bank",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "width": 300,
    "height": 300,
    "mark": {"type": "line", "color": "darkblue", "strokeWidth": 3, "opacity": 1},
    "encoding": {"x": {"field": "date", "type": "temporal", "title": null}},
    "layer": [
      {
        "encoding": {
          "y": {"field": "value", "type": "quantitative", "title": null}
        },
  
        "layer": [
          {
            "mark": {
              "type": "line",
              "align": true,
              "interpolate": "step",
              "color": "red"
            }
          },
          {
            "transform": [{"filter": {"selection": "hover"}}],
            "mark": {"type": "circle", "size": 100, "color": "red"}
          }
        ]
      },
      {
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0, "selection": "hover"},
            "value": 0
          },
          "tooltip": [
            {
              "field": "date",
              "type": "temporal",
              "format": "%Y",
              "title": "Year"
            },
            {
              "field": "value",
              "type": "quantitative",
              "format": ",.2f",
              "title": "Percentage"
            }
          ]
        },
        "selection": {
          "hover": {
            "type": "single",
            "fields": ["date"],
            "nearest": true,
            "on": "mouseover",
            "empty": "none",
            "clear": "mouseout"
          }
        }
      }
    ],
  "color": {"field": "country.name", "type": "nominal"},
  
  "config":{}}